<?xml version="1.0" encoding="utf-8"?>

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 
<servlet>
  <servlet-name>xmlorjson</servlet-name>
  <servlet-class>student.servlets.XMLOrJson</servlet-class>
</servlet>
<servlet>
  <servlet-name>xmldummy</servlet-name>
  <servlet-class>student.servlets.XMLDummy</servlet-class>
</servlet>
<servlet>
  <servlet-name>jsondummy</servlet-name>
  <servlet-class>student.servlets.JsonDummy</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>xmlorjson</servlet-name>
  <url-pattern>/xmlorjson</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>xmldummy</servlet-name>
  <url-pattern>/xmldummy</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>jsondummy</servlet-name>
  <url-pattern>/jsondummy</url-pattern>
</servlet-mapping>
</web-app>
